public class DecimalComparator{
    public static boolean areEqualByThreeDecimalPlaces(double a, double b){
        if ( ((long)(a * 1000.0)) / 1000.0 ==  ((long)(b * 1000.0)) / 1000.0){
            return true;
        }else{
            return false;
        }
    }
